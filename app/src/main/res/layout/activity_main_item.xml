<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/constraint_layout"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        tools:src="@color/purple"/>

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/constraint_layout"
        app:layout_constraintStart_toEndOf="@id/imageview"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/light_black"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="House"/>

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_tv"
        app:layout_constraintStart_toEndOf="@id/imageview"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        tools:text="Manhattan"/>

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_tv"
        app:layout_constraintStart_toEndOf="@id/imageview"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:text="$21,130,000"/>

    <TextView
        android:id="@+id/surface_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/constraint_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/type_tv"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        tools:text="320 sqm m"/>

    <TextView
        android:id="@+id/state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        app:layout_constraintStart_toEndOf="@id/price_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/green"
        android:textSize="18sp"
        tools:text="Available" />


</androidx.constraintlayout.widget.ConstraintLayout>